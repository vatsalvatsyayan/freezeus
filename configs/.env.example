# Freezeus Backend Configuration
# Copy this file to .env and fill in your values

# ========================================
# Gemini API Configuration
# ========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=models/gemini-1.5-pro-latest

# LLM Processing Limits
LLM_MAX_HTML_CHARS=250000
LLM_MAX_RETRIES=2
LLM_RETRY_BASE_SLEEP=1.6

# LLM Behavior
LLM_VERBOSE=1
LLM_OVERWRITE=0

# ========================================
# Supabase Configuration
# ========================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JOBS_TABLE=jobs

# Enable/disable Supabase integration
SUPABASE_ENABLED=1

# ========================================
# Crawler Configuration
# ========================================
# Retry settings
MAX_RETRIES=3
NAV_TIMEOUT_MS=45000

# Politeness delays (seconds) between requests to same domain
PER_DOMAIN_DELAY_MIN=8
PER_DOMAIN_DELAY_MAX=15

# ========================================
# Logging Configuration
# ========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_DIR=logs

# ========================================
# Error Logging Configuration
# ========================================
# Supabase table for error logs (always on when Supabase enabled)
ERROR_LOG_TABLE=error_logs

# Fallback directory for error logs when Supabase unavailable
ERROR_LOG_FALLBACK_DIR=logs/errors

# ========================================
# File Paths
# ========================================
BASE_OUT_DIR=out
CONFIG_URLS_FILE=configs/urls.txt
LLM_PROMPT_FILE=configs/llm_extraction_prompt.txt
